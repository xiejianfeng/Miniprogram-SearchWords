/* pages/word/word.wxss */
@font-face {
font-family: Chalkboard;
src: url('/assets/font/chalkboard.ttf'),
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box;
}

.word-content {
  margin: 140rpx auto 10rpx;
  font-size: 90rpx;
}

.pron-container {
  display: flex;
  flex-direction: row;
}

.word-pron {
  margin-left: 9rpx;
  font-family: Songti TC;
  font-size: 32rpx;
  color: #8F8F8F;
}

.word-definition {
  margin-top: 100rpx;
  font-family: Songti TC;
  font-size: 40rpx;
  color: #FF2D2D;
}

.button-miss {
  display: flex;
  flex-direction: column;
  width: 360rpx;
  height: 80rpx;
  border: 4rpx solid #353535;
  border-radius: 10rpx;
  align-items: center;
  margin-top: 110rpx;
  margin-bottom: 50rpx;
}

.word-miss {
  margin: auto;
  font-family: Songti TC;
  font-size: 44rpx;
  color: #585858;
}

.button-next {
  display: flex;
  flex-direction: column;
  width: 360rpx;
  height: 80rpx;
  border: 4rpx solid #353535;
  border-radius: 10rpx;
  align-items: center;
}

.word-next {
  margin: auto;
  font-family: Songti TC;
  font-size: 44rpx;
  color: #585858;
}
